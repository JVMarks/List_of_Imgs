@model Projeto2.Models.ImageModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar</h1>

<h3>Você realmente quer deletar essa imagem?</h3>
<div>
    <h4>Delete essa imagens se realmente tiver certeza!!!</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Titulo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            Nome da Imagem
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImageName)
        </dd>
        <dt class="col-sm-2">
           Image Baixada
        </dt>
        <dd class="col-sm-10">
           <img src="@("~/upload/"+Model.ImageName)" asp-append-version="true" width="250" />
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ImageId" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar para pagina lista</a>
    </form>
</div>
