@model Projeto2.Models.ImageModel

@{
    ViewData["Title"] = "Details";
}

<h1>Descrição</h1>

<div>
    <h4>Informações da Imagem</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Titulo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            Nome da Imagem
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImageName)
        </dd>
        <dt class="col-sm-2">
            Imagem Baixada
        </dt>
        <dd class="col-sm-10">
            <img src="@("~/upload/"+Model.ImageName)" asp-append-version="true" width="250" />
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ImageId">Editar</a> |
    <a asp-action="Index">Voltar para pagina lista</a>
</div>
